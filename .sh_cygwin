# For Cygwin
if [[ "$(uname -o)" == Cygwin ]] ; then

  alias m="mintty.exe --daemon"
  alias s=cygstart

  alias desktop="cd /cygdrive/c/Users/$USER/Desktop; pwd"
  alias home="cd /cygdrive/c/Users/$USER; pwd"
  
  # sudo
  if [[ -n "$PS1" ]]; then
      cygsudo() {
          local executable=$(which "${1:-cmd}")
          shift
          /usr/bin/cygstart --action=runas "$executable" "$@"
      }
  
      if [[ -x "/usr/bin/cygstart" ]]; then
          alias sudo=cygsudo
      fi
  fi

fi  

